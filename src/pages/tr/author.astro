---
import BaseLayout from "@layouts/BaseLayout.astro";
import { Icon } from "astro-icon/components";
import LatestPosts from "@components/LatestPosts.astro";
import { getConstants } from "@consts";

const currentLocale = "tr";
const constants = getConstants(currentLocale);

const title = `${constants.SITE_TITLE} - Yazar`;
const description = constants.SITE_DESCRIPTION;
---
<BaseLayout title={title} description={description}>
  <h1 class="sr-only">{constants.SITE_TITLE} Yazarı</h1>
  <main id="content">
    <div class="w-full max-w-2xl mx-auto pt-10 md:pt-16 px-4 sm:px-6 lg:px-8">
      <div class="flex items-center gap-x-3">
        <div class="shrink-0">
          <a href="/tr/" aria-label="Ana Sayfaya Dön">
            <img
              class="shrink-0 w-16 h-16 rounded-full"
              src="/dimi.avif"
              alt="Talha Blog"
              loading="lazy"
            />
          </a>
        </div>
        <div class="grow">
          <h2 class="text-lg font-medium text-gray-800 dark:text-neutral-200">
            Talha Blog
          </h2>
          <p class="text-sm text-gray-600 dark:text-neutral-400">
            Müziğe devam, dansa devam.
          </p>
        </div>
      </div>

      <div class="mt-8">
        <p class="text-sm text-gray-600 dark:text-neutral-400">
          Ben bir Beş Element yolcusuyum. <a href="https://talha.sahin.biz/" class="text-gray-600 dark:text-neutral-400 hover:underline" target="_blank">Talha Blog</a>'da Beş Element, Yeryüzü Dalları ve Gökyüzü Dalları hakkındaki ilhamlarımı paylaşıyorum.
        </p>
        <ul class="mt-5 flex flex-col gap-y-3">
          <li class="flex items-center gap-x-2.5">
            <div class="flex items-center text-gray-500 dark:text-gray-400">
              <Icon name="tabler:mail" class="icon-base" />
            </div>
            <a class="text-[13px] text-gray-500 underline hover:text-gray-800 hover:decoration-2 focus:outline-none focus:decoration-2 dark:text-neutral-400 dark:hover:text-neutral-200" href="#">
              talha@sahin.biz
            </a>
          </li>

          <li class="flex items-center gap-x-2.5">
            <div class="flex items-center text-gray-500 dark:text-gray-400">
              <Icon name="tabler:brand-x" class="icon-base" />
            </div>
            <a class="text-[13px] text-gray-500 underline hover:text-gray-800 hover:decoration-2 focus:outline-none focus:decoration-2 dark:text-neutral-400 dark:hover:text-neutral-200" href="#">
              @talhasahinbiz
            </a>
          </li>

          <li class="flex items-center gap-x-2.5">
            <div class="flex items-center text-gray-500 dark:text-gray-400">
              <Icon name="tabler:brand-github" class="icon-base" />
            </div>
            <a class="text-[13px] text-gray-500 underline hover:text-gray-800 hover:decoration-2 focus:outline-none focus:decoration-2 dark:text-neutral-400 dark:hover:text-neutral-200" href="#">
              talhasahinbiz
            </a>
          </li>

          <li class="flex items-center gap-x-2.5">
            <div class="flex items-center text-gray-500 dark:text-gray-400">
              <Icon name="tabler:world-www" class="icon-base" />
            </div>
            <a class="text-[13px] text-gray-500 underline hover:text-gray-800 hover:decoration-2 focus:outline-none focus:decoration-2 dark:text-neutral-400 dark:hover:text-neutral-200" href="#">
              talhasahinbiz
            </a>
          </li>
        </ul>
      </div>
    </div>
  </main>
  <h2 class="sr-only">En Son Makaleler</h2>
  <LatestPosts currentLocale={currentLocale} />
</BaseLayout>
